<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <examplet.com.suppersystm.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/iv_blur"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/mybc2"
        >
        <ImageView
            android:id="@+id/user_header"
            android:background="@drawable/user_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            />

        <RelativeLayout
            android:id="@+id/user_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="#e4e0e0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV:   "
                android:textSize="18sp"
                android:textColor="#e4e0e0"
                android:layout_toLeftOf="@+id/user_position"
                />
            <TextView
                android:id="@+id/user_position"
                style="@style/aboutmy_world"
                android:layout_toLeftOf="@id/user_line"
                android:text="职位"/>

            <TextView
                android:id="@+id/user_acc"
                style="@style/aboutmy_world"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/user_line"
                android:text="13276475747"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/user_name"
            style="@style/aboutmy_world"
            android:text="张三"
            android:textSize="20sp"
            android:layout_below="@+id/user_header"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ListView
        android:padding="20dp"
        android:background="#fff"
        android:id="@+id/lv_more_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#fff"
        android:dividerHeight="6dp"
        android:scrollbars="none"
        />

</LinearLayout>