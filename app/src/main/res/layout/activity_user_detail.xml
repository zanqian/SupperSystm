<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="examplet.com.suppersystm.staff.StaffDetail">

    <examplet.com.suppersystm.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:layout_margin="0dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/staff_head1"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="20sp"
                android:textColor="#f5a506"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:background="#e7de74"
                />
            <LinearLayout
                style="@style/goods_detail_linear1">
                <TextView
                    style="@style/goods_detail_textview1"
                    android:text="编号:"
                    />
                <TextView
                    style="@style/goods_detail_textview3"
                    android:id="@+id/staff_code"
                    android:text="code"/>
            </LinearLayout>
            <LinearLayout
                style="@style/goods_detail_linear1">
                <TextView
                    style="@style/goods_detail_textview1"
                    android:text="岗位:"
                    />
                <TextView
                    style="@style/goods_detail_textview3"
                    android:id="@+id/staff_type"
                    android:text="type"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#fff"
        >
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="身份证:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_idcard"
                android:text="idcard"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="电话:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_phone"
                android:text="phone"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="籍贯:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_natives"
                android:text="natives"/>
        </LinearLayout>

        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="学历:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_edu"
                android:text="edu"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="家庭住址:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_place"
                android:text="place"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="工作经验:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_work"
                android:text="work"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="注册时间:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_intime"
                android:text="intime"/>
        </LinearLayout>
        <LinearLayout
            style="@style/goods_detail_linear">
            <TextView
                style="@style/goods_detail_textview1"
                android:text="出生日期:"
                />
            <TextView
                style="@style/goods_detail_textview3"
                android:id="@+id/staff_birthday"
                android:text="bri"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
