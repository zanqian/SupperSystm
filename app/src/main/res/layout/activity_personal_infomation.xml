<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_infomation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="examplet.com.suppersystm.me.PersonalInfomation">
    <examplet.com.suppersystm.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/user_head"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dddddd"
        >
    <LinearLayout
        style="@style/personal_information_linear"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/personal_information_textview1"
            android:text="商品名称:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/name"
            android:text="name"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="商品编码:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/code"
            android:text="code"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="库         存:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/stock"
            android:text="stock"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="售         价:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/price"
            android:text="price"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="进         价:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/bid"
            android:text="bid"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="货架编号:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/supplierId"
            android:text="supplierId"/>
    </LinearLayout>
    <LinearLayout
        style="@style/personal_information_linear">
        <TextView
            style="@style/personal_information_textview1"
            android:text="供应商号:"
            />
        <TextView
            style="@style/goods_detail_textview2"
            android:id="@+id/shelfId"
            android:text="shelfId"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
