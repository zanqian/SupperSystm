<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="examplet.com.suppersystm.member.MemberDetail">
        <examplet.com.suppersystm.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="卡         号"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_code"
                android:hint="123456789"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="姓        名"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_name"
                android:text="name"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="电        话"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_phone"
                android:text="15318481541"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="身份证号"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_idcard"
                android:maxLength="18"
                android:hint="123456789"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="出生日期"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_birth"
                android:text="出生日期 yyyy-mm-dd"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/add_staff_item"
            >
            <TextView
                style="@style/add_staff_textView"
                android:text="办卡日期"
                />
            <TextView
                style="@style/add_staff_editText"
                android:id="@+id/member_detail_intime"
                android:text="1111-11-11"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/add_staff_save"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_margin="45dp"
                android:background="@drawable/add_staff_save"
                android:text="操作"
                />

        </LinearLayout>
    </LinearLayout>
